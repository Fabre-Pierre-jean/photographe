{% extends 'base.html.twig' %}

{% block title %}Images index{% endblock %}

{% block body %}
    <h1>Images index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomEvenement</th>
                <th>UrlImage</th>
                <th>Commentaires</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for image in images %}
            <tr>
                <td>{{ image.id }}</td>
                <td>{{ image.nomEvenement }}</td>
                <td><img {% if image.urlImage == "" %}src="/uploads/image_gallery/{{ image.imageFilename }}" {% else %} src="{{ image.urlImage }}" {% endif %} alt="{{ image.nomEvenement }}" style="width: 175px; height: 100px"></td>
                <td>{{ image.commentaires }}</td>
                <td>
                    <a href="{{ path('images_show', {'id': image.id}) }}">show</a><br>
                    <a href="{{ path('images_edit', {'id': image.id}) }}">edit</a>
                    {{ include('images/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('images_new') }}">Create new</a>
{% endblock %}
